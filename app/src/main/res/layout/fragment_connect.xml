<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.group.nxt_btrc_group_cosc426.ConnectFragment">

    <Button
        android:text="Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vv_btnDisconnect"
        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/BTN_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:layout_alignBaseline="@+id/vv_btnDisconnect"
        android:layout_alignBottom="@+id/vv_btnDisconnect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/bluetoothoff"
        android:id="@+id/vv_imgConnect"
        android:layout_height="150dp"
        android:layout_width="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="wrap_content"
        android:id="@+id/vv_progBar"
        android:max="100"
        android:progress="20"
        android:progressTint="@color/colorAccent"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/vv_imgConnect"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <TextView
        android:text="Device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vv_connectStatus"
        android:textSize="30sp"
        android:layout_alignTop="@+id/vv_imgConnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:text="Not Connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vv_cStatus"
        android:textSize="30sp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/vv_connectStatus"
        android:layout_alignLeft="@+id/vv_connectStatus"
        android:layout_alignStart="@+id/vv_connectStatus"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:text="Battery Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vv_tvBatteryVolt"
        android:layout_below="@+id/vv_progBar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
